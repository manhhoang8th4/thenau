<body style="background: #F9F5EE">
    <!-- header     -->
    <div style="background-color: #F9F5EE;" class="header">
        <div style="height:68px;" class="container head-content">
            <div class="row">
                <div class=" d-none d-lg-inline-block">
                    <a href="@Url.Action("Index","Home")">
                        <img class="logo" src="~/Images/z5482551824090_8d0041d8091c42fc59c7cfff0e837099.jpg" alt="">
                    </a>
                </div>
                <div style="margin-left: 70px;" class="col-lg-6 col-12 head-middle">
                    @using (Html.BeginForm("Search", "Category", FormMethod.Post))
                    {
                        <form class="d-flex d-lg-block">
                            <input style="min-width: 300px;" type="text" name="inputString" placeholder="Nhập từ khóa tìm kiếm...">
                            <button class="d-none d-lg-inline-block btn-search" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    }
                </div>
                <div class="col-lg-3  mt-auto mt-lg-0  head-right">
                    @if (user == null)
                    {
                        <a href="@Url.Action("Login","User")" class="cart-link">
                            <i class="bi bi-cart-fill"></i>
                            <span class="icon-down">
                                <i class="bi bi-chevron-down"></i>
                            </span>
                        </a>
                    }
                    else
                    {
                        { Html.RenderAction("CartPartial", "Cart"); }
                    }

                    @if (user == null)
                    {
                        <a style="background-color: #fff; color: #000; font-size: 15px;" href="@Url.Action("SignUp", "User")" class="custom-btn btn-login btn-register">Đăng ký</a>
                        <a style="background-color: #C92127; font-size: 13px;" href="@Url.Action("Login", "User")" class="custom-btn btn-signup">Đăng nhập</a>
                    }
                    else
                    {
                        <div class="dropdown show">
                            <a class="user-link-option" href="" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i style="margin: 20px; color: #c92127;" class="bi bi-person-circle"></i>
                                <p style="font-size: 22px; color: #c92127; width: 100px; "> @user.Ten</p>

                            </a>


                            <div class="dropdown-menu mr-5" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="@Url.Action("UpdateInfo", "User")">Thông Tin Cá Nhân</a>
                                <a class="dropdown-item" href="@Url.Action("Index/"+user.MaKH,"Order")">Đơn Hàng Của Bạn</a>
                                <a class="dropdown-item" href="@Url.Action("ChangePassword", "User")">Đổi Mật Khẩu</a>
                                <a class="dropdown-item" href="@Url.Action("LogOut","User")">Đăng Xuất</a>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>

    </div>
    <!-- end-header -->
    <!-- nav -->
    <div class="nav">
        <div style="margin-top:20px; margin-bottom:-10px" class="container nav-list">
